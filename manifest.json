{
  "name": "Pinboard",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Let's you bookmark to Pinboard",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/browser.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [ // TEMP
    {
      "matches": ["http://*.pinboard.in/*"],
      "css": ["css/themes/prettypinboard.css"]
    }
  ],
  "background": {
    "scripts": ["js/zepto.js","js/pinboardApi.js"]
  },
  "permissions": [
    "https://api.pinboard.in/*",
    "tabs",
    "bookmarks"
  ],
  "options_page": "options.html"
}